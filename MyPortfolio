#include<iostream>
using namespace std;
void about();
void skills();
void projects();
void future();
int main()
{
    cout<<"=========================="<<endl;
    cout<<"   MY PORTFOLIO APP       "<<endl;
    cout<<"=========================="<<endl;
    cout<<endl;
    int option;


    while(true)
    {
        cout<<"1. About Me "<<endl;
        cout<<"2. Skills I Want to Learn "<<endl;
        cout<<"3. My Projects "<<endl;
        cout<<"4. My Future Plans "<<endl;
        cout<<"5. Exit "<<endl;
        cout<<endl;

        cout<<"Choose from the menu above : ";

        if (!(cin>>option))
            {
                cout<<"Invalid option. Please choose a number from the menu."<<endl;
                cin.clear();
                cin.ignore();
                cout<<endl;
                continue;
            }

        cout<<endl;

        switch(option)
        {
        case 1:
            about();
            cout<<endl;
            break;
        case 2:
            skills();
            cout<<endl;
            break;
        case 3:
            projects();
            cout<<endl;
            break;
        case 4:
            future();
            cout<<endl;
            break;
        case 5:
            cout<<"Exiting...";
            return 0;
            break;
        default :
            cout<<"Invalid Choice \n "<<endl;

        }
    }

    return 0;
}
